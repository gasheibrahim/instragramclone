      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <center>
  <div class="field">
    <%= form.label :image %><br>
    <%= form.file_field :image %>
  </div><br>

